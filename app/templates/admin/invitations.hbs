<!-- app/templates/admin/invitations.hbs -->

<h1>Admin > Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Action</th>
      <th>ID</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <td><button class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>Delete</button></td>
      <th>{{invitation.id}}</th>
      <td>{{invitation.email}}</td>
    </tr>
  {{/each}}
  </tbody>
</table>